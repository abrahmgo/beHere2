# Uncomment the next line to define a global platform for your project
 platform :ios, '11.0'

target 'BeHereScreen' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for BeHereScreen
   pod 'Charts', '~> 3.0'

  # Pod for views 
   pod 'Spring', '~> 1.0.5'

  # Pod for FireBase
   pod 'Firebase/Core'
   pod 'Firebase/Auth'
   pod 'Firebase/Database' 
  
  # Pods for Facebook
  # pod 'Bolts'
  # pod 'FBSDKCoreKit'
  # pod 'FBSDKLoginKit'

   pod 'FacebookCore'
   pod 'FacebookLogin'
   pod 'FacebookShare'

  # Pod for google admob
   pod 'Google-Mobile-Ads-SDK'
end
